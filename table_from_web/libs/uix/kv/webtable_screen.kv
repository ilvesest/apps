<MainWidget>:
    rows: 2
    Label:
        text: "Extract Table from Web"
        size_hint: 1, 0.25
        font_size: self.width / 20
    
    GridLayout:
        rows: 2
        GridLayout:
            cols:4
            row_force_default: True 
            row_default_height: 70
            Label:
                text: "Website URL:"
                size_hint_x: .35
                font_size: "20dp"
                height: 20
            TextInput:
                text: root.url_str
                id: url_input
                multiline: True
                on_text_validate: root.validate_url_text(self)
           
            Button:
                text: "Extract"
                size_hint_x: .25
                on_release: root.validate_url_text(url_input)
            Label:
                text: root.message_text
                pos_hint: self.width / 2, None
                size_hint: 1, .25
        
            Label:
                text: "Choose Table from "+ root.first_table_idx + " to " + str(root.n_tables)
                size_hint_y: 0.1
            TextInput:
                id: table_nr_input
                input_filter: "int"
                multiline: False
                on_text_validate: root.validate_nth_table_text(self)
            Button:
                text: "Choose"
                on_release: root.validate_nth_table_text(table_nr_input)
            Label:
                text: root.nth_table_str
                pos_hint: self.width / 2, None
                size_hint: 1, .25
                
        GridLayout:
            cols: 3
            row_force_default: True 
            row_default_height: 70
            pos: .4, .5
            Label:
                text: "Save Table " + str(root.nth_table) + " to file."
                size_hint_x: 0.4
            Button:
                text: "Browse"
                on_release: root.tk_browse()
                size_hint_x: .25
            Label:
                text: root.browse_str
            
                
                
            
                
            


        